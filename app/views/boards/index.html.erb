<h1>看板</h1>
<a href="/boards/new">新增看板1</a>
<a href="<%= new_board_path %>">新增看板2</a>
<%= link_to "新增看板3", new_board_path %>

<ul>
  <% @boards.each do |board| %>
    <li>
      <%= link_to board.title, board_path(board) %>
      <%= link_to "編輯", edit_board_path(board) %>
      <%= link_to "刪除", board_path(board), method: 'delete', data: { confirm: '確定刪除？' } %>
    </li>
  <% end %>
</ul>
