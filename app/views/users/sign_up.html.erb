<h1>
  會員註冊
</h1>

<%= form_for(@user) do |f|  %>

<div class="fields">
  <%= f.label :account, "帳號" %>
  <%= f.text_field :account %>
</div>

<div class="fields">
  <%= f.label :password, "密碼" %>
  <%= f.password_field :password %>
</div>

<div class="fields">
  <%= f.label :email, "信箱" %>
  <%= f.email_field :email %>
</div>
<%= f.submit "註冊帳號" %>

<% end %>